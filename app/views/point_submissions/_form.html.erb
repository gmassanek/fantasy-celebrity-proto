<%= form_for(@point_submission) do |f| %>
  <% if @point_submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@point_submission.errors.count, "error") %> prohibited this point_submission from being saved:</h2>

      <ul>
      <% @point_submission.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :proof_url %><br>
    <%= f.text_field :proof_url %>
  </div>
  <div class="field">
    <%= f.label :scoring_statistic_id %><br>
    <%= f.collection_select :scoring_statistic_id, ScoringStatistic.order(:description), :id, :description %>
  </div>
  <div class="field">
    <%= f.label :scoring_statistic_override %><br>
    <%= f.text_field :scoring_statistic_override %>
  </div>
  <div class="field">
    <%= f.label :points %><br>
    <%= f.text_field :points %>
  </div>
  <div class="field">
    <%= f.label :player_id %><br>
    <%= f.collection_select :player_id, Player.order(:last_name), :id, :full_name, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, ['submitted', 'approved', 'rejected'] %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
