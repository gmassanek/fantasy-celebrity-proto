<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @team.title %>
</p>

<h3>Roster</h3>
<table>
  <thead>
    <th>Slot</th>
    <th>Player (pos)</th>
    <th>Points</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <% @team.starters.each do |roster_slot| %>
      <%= render 'teams/roster_slot', :roster_slot => roster_slot %>
    <% end %>
    <% @team.bench.each do |roster_slot| %>
      <%= render 'teams/roster_slot', :roster_slot => roster_slot %>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Edit', edit_team_path(@team) %> |
  <%= link_to 'Back', teams_path %>
</p>
