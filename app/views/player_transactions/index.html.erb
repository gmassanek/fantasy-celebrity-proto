<p id="notice"><%= notice %></p>

<h1>Listing Player Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Action</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_transactions.each do |player_transaction| %>
      <tr>
        <td><%= player_transaction.player_id %></td>
        <td><%= player_transaction.action %></td>
        <td><%= player_transaction.team_id %></td>
        <td><%= link_to 'Show', player_transaction %></td>
        <td><%= link_to 'Edit', edit_player_transaction_path(player_transaction) %></td>
        <td><%= link_to 'Destroy', player_transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

