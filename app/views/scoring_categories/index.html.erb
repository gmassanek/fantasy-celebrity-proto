<p id="notice"><%= notice %></p>

<h1>Listing Scoring Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scoring_categories.each do |scoring_category| %>
      <tr>
        <td><%= scoring_category.name %></td>
        <td><%= link_to 'Show', scoring_category %></td>
        <td><%= link_to 'Edit', edit_scoring_category_path(scoring_category) %></td>
        <td><%= link_to 'Destroy', scoring_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

